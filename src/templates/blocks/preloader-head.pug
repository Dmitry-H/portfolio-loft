    .prloader__image--animate .dot-1 {
        animation: 1s spin 1 ease;
    }

    .prloader__image--animate .dot-2 {
        animation: 1.1s spin 1 ease;
    }

    .prloader__image--animate .dot-3 {
        animation: 1.2s spin 1 ease;
    }

    @keyframes spin {
        from {
            transform: rotate(0);
        }

        to {
            transform: rotate(360deg);
        }
    }


